<templates>
  <t t-name="o-spreadsheet.FilterIcon" owl="1">
    <div class="o-icon o-filter-icon" t-att-style="style" t-on-click="() => props.onClick()">
      <span t-if="props.isActive" class="o-filter-active-icon">
        <t t-call="o-spreadsheet.Icon.FILTER_ICON_ACTIVE"/>
      </span>
      <span t-else="">
        <t t-call="o-spreadsheet.Icon.FILTER_ICON"/>
      </span>
    </div>
  </t>
</templates>
